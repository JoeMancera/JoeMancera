---
import { experience } from '../../utils/data/experience'
---

<section id="experience" class="container">
  <h2 class="section__title">Experience</h2>
  <p class="section__description">
    I have been working as a web developer for more than 7 years, and I have
    been involved in many projects. I have working with many technologies and
    roles.
  </p>
  <div class="experience__container">
    {
      experience.reverse().map((item) => (
        <article class="experience__item">
          <h3 class="experience__item--title">{item.title}</h3>
          <span class="experience__item--info">
            {item.entity}
            <span class="experience__item--dates">
              {item.dateStart}-{item.dateEnd ?? 'Present'}
            </span>
          </span>
          <div class="experience__item--description">
            {item.descriptions.map((desc) => (
              <p>{desc}</p>
            ))}
          </div>
        </article>
      ))
    }
  </div>
</section>
<style>
  .experience__container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-left: 3rem;
    padding-bottom: 2rem;
  }

  .experience__item {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .experience__item::after {
    content: '';
    display: block;
    width: 28px;
    height: 28px;
    background-color: var(--color-primary);
    position: absolute;
    left: -3rem;
    top: 0;
    border-radius: 50%;
    border: 4px solid var(--color-link);
    z-index: 1;
  }

  .experience__item--title {
    font-size: 2rem;
    color: var(--color-vanilla);
  }

  .experience__item--info {
    display: flex;
    flex-direction: column;
    color: var(--color-link);
  }

  .experience__item--dates {
    color: var(--color-secondary);
  }

  .experience__item--description {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-width: 70ch;
  }
</style>
