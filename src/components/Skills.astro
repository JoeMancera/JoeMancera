<style>
  .skills__item {
    background-color: var(--color-secondary);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 18px;
    cursor: pointer;
  }

  .skills__item:hover {
    box-shadow: 0 0 5px var(--color-vanilla);
  }

  .skills__item:focus-visible summary svg {
    shape-outside: var(--color-vanilla);
  }

  .skills__item summary {
    display: flex;
    align-items: center;
    list-style: none;
    font: var(--font-headline3);
    color: var(--color-primary);
  }

  .skills__item p {
    margin-top: 12px;
  }

  .skills__item span {
    align-self: baseline;
  }

  summary svg {
    width: 32px;
    height: 32px;
    margin-right: 18px;
    fill: var(--color-primary);
  }

  .skills__item[open] {
    background-color: var(--color-vanilla);
    color: var(--color-secondary);
  }

  .skill__dot {
    display: none;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: var(--color-secondary);
  }

  .skill__background {
    display: none;
  }

  @media only screen and (min-width: 660px) {
    #skills {
      padding-inline-end: 0;
    }

    .skills__container {
      background-image: url('https://raw.githubusercontent.com/JoeMancera/JoeMancera/master/img/background-skills.svg');
      background-repeat: no-repeat;
      background-position-x: right;
      background-position-y: center;
      display: grid;
      height: 85vh;
      grid-template-columns: [first] 37% 63% [end];
      grid-template-rows: [first] repeat(7, 1fr);
    }

    .skills__item {
      background-color: transparent;
      width: 50px;
      height: 50px;
      margin: auto;

      -webkit-animation-duration: 1s;
      animation-duration: 1s;
      -webkit-animation-fill-mode: both;
      animation-fill-mode: both;
    }

    .skills__item:hover {
      box-shadow: none;
    }

    .skills__item p {
      color: var(--color-white);
    }

    .skills__item summary:focus {
      outline: transparent;
      list-style: transparent;
      border-bottom: 2px solid var(--color-vanilla);
    }

    summary svg {
      fill: var(--color-link);
      margin-right: 0;
    }

    .skills__item summary {
      flex-direction: column;
      width: 100px;
    }

    .skills__item p {
      margin-top: 32px;
    }

    .skills__item span {
      font-size: 12px;
      align-self: center;
      color: var(--color-white);
    }

    .skills__item[open] {
      background-color: transparent;
      color: var(--color-white);
      width: 280px;
      grid-column: 2;
      grid-row-start: 1;
      grid-row-end: 7;
    }

    .skills__item[open] summary {
      flex-direction: row;
      text-align: left;
      width: inherit;
    }

    .skills__item[open] summary svg {
      margin-right: 18px;
    }

    .skills__item[open] span {
      display: block;
      font: var(--font-headline3);
      color: var(--color-link);
      width: 280px;
    }
  }

